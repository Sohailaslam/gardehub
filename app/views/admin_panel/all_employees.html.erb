<div class="container-fluid container-gray py-5">
    <div class="container">
        <div class="row">
          <%= render('sidebar') %>
            <div class="col-xl-8">
              <%= render('statistics') %>
                <div class="card">
                    <div class="card-body">
                  <h3 class="mb-3">All Employees</h3>
                  <table class="table table-bordered">
                    <tbody>
                    <tr>
                       <th>Name</th>
                       <th>Email</th>
                       <th>Phone Number</th>
                       <th>Location</th>
                    </tr>
                    <% @employees.each do |employee| %>
                    <tr>
                      <td><%= employee.name %></td>
                      <td><%= employee.email %></td>
                      <td><%= employee.phone_number %></td>
                      <td><%= employee.location %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>
